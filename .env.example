# ===========================================
# Tako API - Configuration
# ===========================================

# Serveur
PORT=3000
NODE_ENV=development
DEFAULT_LOCALE=fr-FR
API_BASE_URL=http://localhost:3000

# ===========================================
# Cache PostgreSQL
# ===========================================
DB_ENABLED=true
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tako_cache
DB_USER=tako
DB_PASSWORD=changeme
DB_SSL=false

# Cache settings
CACHE_TTL=300000
CACHE_MAX_SIZE=100

# ===========================================
# Scraping & Proxy
# ===========================================

# FlareSolverr (bypass Cloudflare)
FSR_URL=http://flaresolverr:8191/v1

# VPN Proxy (Gluetun)
VPN_PROXY_URL=http://gluetun:8888
GLUETUN_CONTROL_URL=http://gluetun:8000

# User Agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ===========================================
# APIs externes (clés stockées en clair, usage personnel)
# ===========================================

# ─────────────────────────────────────────────
# Construction Toys
# ─────────────────────────────────────────────
# Brickset (API officielle LEGO)
# Obtenir une clé: https://brickset.com/tools/webservices/requestkey
BRICKSET_API_KEY=

# Rebrickable (base de données LEGO communautaire)
# Obtenir une clé: https://rebrickable.com/api/
REBRICKABLE_API_KEY=

# MEGA Construx (Archive PostgreSQL + MinIO)
MEGA_DB_HOST=localhost
MEGA_DB_PORT=5434
MEGA_DB_NAME=mega_archive
MEGA_DB_USER=megauser
MEGA_DB_PASSWORD=changeme
MEGA_MINIO_ENDPOINT=localhost
MEGA_MINIO_PORT=9000
MEGA_MINIO_ACCESS_KEY=minioadmin
MEGA_MINIO_SECRET_KEY=changeme
MEGA_MINIO_BUCKET=mega-pdfs
MEGA_MINIO_USE_SSL=false

# ─────────────────────────────────────────────
# Media (Films & Séries)
# ─────────────────────────────────────────────
# TMDB (The Movie Database)
# Obtenir une clé: https://www.themoviedb.org/settings/api
TMDB_API_KEY=

# TVDB (TheTVDB)
TVDB_API_KEY=

# OMDB (Open Movie Database)
OMDB_API_KEY=

# ─────────────────────────────────────────────
# Games (Jeux vidéo)
# ─────────────────────────────────────────────
# IGDB (via Twitch)
# Créer une app: https://dev.twitch.tv/console/apps
IGDB_CLIENT_ID=
IGDB_CLIENT_SECRET=

# RAWG
RAWG_API_KEY=

# ─────────────────────────────────────────────
# Books (Livres)
# ─────────────────────────────────────────────
# Google Books (optionnel, augmente les quotas)
GOOGLE_BOOKS_API_KEY=

# ─────────────────────────────────────────────
# Comics
# ─────────────────────────────────────────────
# Comic Vine
COMICVINE_API_KEY=

# ─────────────────────────────────────────────
# Music
# ─────────────────────────────────────────────
# Discogs
DISCOGS_TOKEN=

# ─────────────────────────────────────────────
# TCG (Cartes à collectionner)
# ─────────────────────────────────────────────
# Pokémon TCG
POKEMON_TCG_API_KEY=

# Scryfall (pas de clé nécessaire mais peut être utile)
SCRYFALL_API_KEY=

# ===========================================
# Services auxiliaires
# ===========================================

# Traduction automatique (intégrée via google-translate-api-x)
# Mettre à false pour désactiver complètement la traduction
AUTO_TRAD_ENABLED=true

# Monitoring
ENABLE_MONITORING=false
MONITORING_EMAIL=
